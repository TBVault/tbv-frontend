{
  "openapi": "3.1.0",
  "info": {
    "title": "The Bhakti Vault API",
    "description": "FastAPI application with OpenID Connect authentication",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Root",
        "description": "Root endpoint",
        "operationId": "root__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {

                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health",
        "description": "Health check endpoint",
        "operationId": "health_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {

                }
              }
            }
          }
        }
      }
    },
    "/public/hello_world_pydantic": {
      "get": {
        "summary": "Public Hello World Pydantic",
        "operationId": "public_hello_world_pydantic_public_hello_world_pydantic_get",
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Message"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelloDto"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/protected/helloworld": {
      "get": {
        "summary": "Protected Hello World",
        "description": "Protected hello world endpoint - requires valid OIDC JWT token.\nReturns \"helloworld\" string.",
        "operationId": "protected_hello_world_protected_helloworld_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelloDto"
                }
              }
            }
          }
        },
        "security": [
          {
            "OpenIdConnect": []
          },
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/protected/transcript": {
      "get": {
        "summary": "Transcript",
        "operationId": "transcript_protected_transcript_get",
        "security": [
          {
            "OpenIdConnect": []
          },
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "public_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Public Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transcript"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/protected/transcripts": {
      "get": {
        "summary": "Transcripts",
        "operationId": "transcripts_protected_transcripts_get",
        "security": [
          {
            "OpenIdConnect": []
          },
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "page_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Page Number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TranscriptsPaginated"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "description": "Login endpoint - validates OIDC JWT token and returns user information.\nSend the Google OIDC token in the Authorization header as: Bearer \u003Ctoken\u003E\nReturns a failed login response if the user doesn't exist in the database.",
        "operationId": "login_auth_login_post",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "OpenIdConnect": []
          },
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Get Current Account",
        "description": "Get the current authenticated user's account information.\nRequires a valid OIDC JWT token.",
        "operationId": "get_current_account_auth_me_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        },
        "security": [
          {
            "OpenIdConnect": []
          },
          {
            "HTTPBearer": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "HelloDto": {
        "properties": {
          "message": {
            "type": "string",
            "title": "Message"
          }
        },
        "type": "object",
        "required": [
          "message"
        ],
        "title": "HelloDto"
      },
      "LoginResponse": {
        "properties": {
          "success": {
            "type": "boolean",
            "title": "Success"
          },
          "message": {
            "type": "string",
            "title": "Message"
          },
          "user": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/User"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "type": "object",
        "required": [
          "success",
          "message"
        ],
        "title": "LoginResponse"
      },
      "Transcript": {
        "properties": {
          "public_id": {
            "type": "string",
            "title": "Public Id"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "duration": {
            "type": "integer",
            "title": "Duration"
          },
          "summary": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Summary"
          },
          "source": {
            "$ref": "#/components/schemas/TranscriptSource"
          },
          "content": {
            "anyOf": [
              {
                "items": {
                  "$ref": "#/components/schemas/TranscriptChunk"
                },
                "type": "array"
              },
              {
                "type": "null"
              }
            ],
            "title": "Content"
          },
          "recording_url": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Recording Url"
          }
        },
        "type": "object",
        "required": [
          "public_id",
          "title",
          "duration",
          "summary",
          "source",
          "content",
          "recording_url"
        ],
        "title": "Transcript"
      },
      "TranscriptChunk": {
        "properties": {
          "speaker": {
            "type": "string",
            "title": "Speaker"
          },
          "start": {
            "type": "integer",
            "title": "Start"
          },
          "text": {
            "type": "string",
            "title": "Text"
          }
        },
        "type": "object",
        "required": [
          "speaker",
          "start",
          "text"
        ],
        "title": "TranscriptChunk"
      },
      "TranscriptSource": {
        "type": "string",
        "enum": [
          "otterai",
          "whisper"
        ],
        "title": "TranscriptSource"
      },
      "TranscriptsPaginated": {
        "properties": {
          "page_number": {
            "type": "integer",
            "title": "Page Number"
          },
          "page_size": {
            "type": "integer",
            "title": "Page Size"
          },
          "page_count": {
            "type": "integer",
            "title": "Page Count"
          },
          "total_count": {
            "type": "integer",
            "title": "Total Count"
          },
          "transcripts": {
            "items": {
              "$ref": "#/components/schemas/Transcript"
            },
            "type": "array",
            "title": "Transcripts"
          }
        },
        "type": "object",
        "required": [
          "page_number",
          "page_size",
          "page_count",
          "total_count",
          "transcripts"
        ],
        "title": "TranscriptsPaginated"
      },
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "title": "Id"
          },
          "name": {
            "type": "string",
            "title": "Name"
          },
          "email": {
            "type": "string",
            "title": "Email"
          },
          "role": {
            "type": "string",
            "title": "Role"
          }
        },
        "type": "object",
        "required": [
          "id",
          "name",
          "email",
          "role"
        ],
        "title": "User"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "OpenIdConnect": {
        "type": "openIdConnect",
        "openIdConnectUrl": "https://accounts.google.com/.well-known/openid-configuration"
      },
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}